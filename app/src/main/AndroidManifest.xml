<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="udit.programmer.co.firebase">

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.gyroscope"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.magnetometer"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.light"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.pressure"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.humidity"
        android:required="true" />

    <uses-permission android:name="android.permission.BODY_SENSORS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_tag_faces_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_tag_faces_24"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FireBase.SignInActivity"></activity>
        <activity android:name=".FireBase.AuthenticatedActivity" />
        <activity android:name=".FireBase.PhoneActivity" />
        <activity android:name=".Search.SearchActivity" />
        <activity
            android:name=".Toolbar.BottomActivity"
            android:theme="@style/AppTheme3" />
        <activity
            android:name=".Layout.LayoutActivity"
            android:theme="@style/AppTheme2" />
        <activity android:name=".Sensors.OtherSensorsActivity" />
        <activity android:name=".Sensors.MagnetometerActivity" />
        <activity android:name=".Sensors.GyroScopeActivity" />
        <activity android:name=".Sensors.AccelerometerActivity" />
        <activity
            android:name=".Sensors.SensorsActivity"
            android:label="@string/title_activity_sensors" />
        <activity android:name=".Toolbar.CollapsingToolbarActivity" />
        <activity android:name=".Toolbar.ScrollActivity" />
        <activity android:name=".Toolbar.ToolbarActivity" />
        <activity android:name=".FireBase.FireBaseActivity" />
        <activity android:name=".MVVM.ui.view.MVVM_Activity" />
        <activity android:name=".WorkManager.WorkManagerActivity" />
        <activity android:name=".RoomDatabase.RoomActivity" />
        <activity android:name=".ViewPager.ViewPagerActivity" />
        <activity android:name=".Notifications.NotificationActivity" />
        <activity android:name=".Fragments.Fragmentactivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".Maps.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>