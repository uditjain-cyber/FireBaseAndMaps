<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".Sensors.SensorsActivity"
    tools:deviceIds="wear">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/accelerometer_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:backgroundTint="@color/Chocolate"
        android:text="Accelerometer"
        app:cornerRadius="25dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/gyroscope_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/accelerometer_btn"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:backgroundTint="@color/Chocolate"
        android:text="GyroScope"
        app:cornerRadius="25dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/magnetometer_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/gyroscope_btn"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:backgroundTint="@color/Chocolate"
        android:text="Magnetometer"
        app:cornerRadius="25dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/other_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/magnetometer_btn"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:backgroundTint="@color/Chocolate"
        android:text="Other Sensors"
        app:cornerRadius="25dp" />



    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Hello"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>